<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/com_app_color">

    <RelativeLayout
        android:id="@+id/ll_bntreturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:minWidth="48dip">

        <TextView
            android:id="@+id/returnbnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_btn_return"
            android:textColor="@color/ctv_white" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/returnbnt"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:textColor="@color/ctv_white"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_title_set_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_set_line_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_title_btn_default"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/ctv_white"
            android:gravity="center"
            android:clickable="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_set_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_title_btn_default"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/ctv_white"
            android:gravity="center"
            android:clickable="true"
            android:visibility="gone" />

    </LinearLayout>

    <TextView
        android:id="@+id/text_middle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:textColor="@color/ctv_white"
        android:textSize="@dimen/com_tv_size_bigger"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/pb_top"
        style="@android:style/Widget.ProgressBar.Small.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip"
        android:indeterminateDrawable="@drawable/progressbar_loading_style"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_msg_tv"
        style="@style/comNewMsgDotOnlyStyle"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dip"
        android:layout_marginTop="5dip"
        android:visibility="gone" />

    <View
        android:id="@+id/title_divider_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e4e6e8"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>
</RelativeLayout>